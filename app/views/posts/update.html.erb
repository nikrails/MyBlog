<table>
  <tr>
    <th>Title</th>
    <th>description</th>
    <th colspan="2"></th>
  </tr>
 
  <% @post.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
    </tr>
  <% end %>
</table>