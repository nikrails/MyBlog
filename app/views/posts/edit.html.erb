<div class="text-center">
<h1>Editing article</h1>
 
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
 
  
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>



   <div class="field">
    <%= f.label :publish %>
    <%= f.select :publish,[['true',true],['false',false]] %>
</div>

  <div class="field">
    <%= f.label :image, "Picture" %>
    <%= f.file_field :image %>
    
  </div>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>
</div>
 